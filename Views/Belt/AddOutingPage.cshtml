@{
ViewData["Title"] = "Home Page";
}
@using BeltExam.Models
@model Outing

<partial name="_navPartial" />

<div class="jumbotron">
  <h1>Hello @ViewBag.Name</h1>
  <a class="btn btn-secondary" asp-action="LogOut" asp-controller="H">Log Out</a>
</div>
<h3>Create An Outing</h3>
<form asp-action="AddOuting" asp-controller="Belt" method="POST">
  <div class="row">
    <div class="col">
      <input asp-for="UserId" type="hidden" value="@ViewBag.CurUser.UserId">
      <span asp-validation-for="Title"></span>
      <label asp-for="Title"></label>
      <input class="form-control" asp-for="Title">
      <span asp-validation-for="Date"></span>
      <label asp-for="Date"></label>
      <input class="form-control" asp-for="Date">
    </div>
    <div class="col">
      <span asp-validation-for="Time"></span>
      <label asp-for="Time"></label>
      <input class="form-control" asp-for="Time">

      

      <span asp-validation-for="Duration"></span>
      <label asp-for="Duration"></label>
      <input class="form-control" asp-for="Duration">

      <span asp-validation-for="DurationType"></span>
      <label asp-for="DurationType"></label>
      <select class="form-control" asp-for="DurationType">
        <option value="Hours">Hours</option>
        <option value="Minutes">Minutes</option>
        <option value="Days">Days</option>
      </select>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <span asp-validation-for="Description"></span>
      <label asp-for="Description"></label>
      <input class="form-control" asp-for="Description">

      <input class="btn btn-dark" type="Submit" value="Create Outing">
</form>


</div>
</div>




</div>